{
  "manifest_version": 3,
  "name": "RageBreak",
  "version": "1.0.0",
  "description": "Take micro-breaks while browsing with fun mini-games",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "videoCapture",
    "windows"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/scripts/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/scripts/games/wordle.js",
        "src/scripts/games/sudoku.js",
        "src/scripts/games/memory.js",
        "src/scripts/games/snake.js",
        "src/scripts/games/math.js",
        "src/scripts/games/webcam-overlay.js",
        "src/scripts/games/2048.js",
        "src/scripts/content_script.js",
        "src/scripts/notification.js"
      ],
      "css": ["src/styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "src/pages/options.html",
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Toggle RageBreak on/off"
    },
    "skip-next-break": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Restart"
    }
  }
}
